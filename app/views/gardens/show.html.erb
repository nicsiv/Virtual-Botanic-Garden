<h2 class="centered"> Welcome To <%= @garden.garden_name %></h2>
<br>
<section class="centered show-garden">
<ul>
    <% @garden.plants.each do |plant| %>
    <li class="show-image">
    <%= image_tag plant.image %></div>
    </li>
    <h3 class="names"><%= plant.name %></h3>
    </li>
    <% end %>
</ul>

<div>
<button class="crud-button"><%= link_to "Edit Garden", edit_garden_path(@garden)%></button>
<button class="crud-button"><%= link_to "Delete Garden", garden_path(@garden), method: :delete %></button>
</div>
<br>
</section>


