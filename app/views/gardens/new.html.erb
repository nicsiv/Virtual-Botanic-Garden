<section class= "centered new-garden-banner">
  <h2 class="login-text"> Start Your Garden </h2>
<br>

<div>
<%= form_for @garden do |f| %>
  
    <h5><%= f.label "Name Your Garden" %>
    <%= f.text_field :garden_name %>
    
    <%= f.label "Plant" %>
    <%= f.collection_select :plant_ids, Plant.all, :id, :name %></h5>
  <br>
<%= f.submit %>
<% end %>
</div>

<% if @garden.errors.any? %>
  <h4>Errors</h4>
  <% @garden.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
</section>
<br>